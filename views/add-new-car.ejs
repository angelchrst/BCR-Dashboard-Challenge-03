    <div class="dash-img">
        <a href="/dashboard">
            <img src="/img/dashboard.svg" alt="dashboard">
        </a>
        <a href="/dashboard">Dashboard</a>
    </div>
    <div class="dash-img" id="active">
        <a href="/cars">
            <img src="/img/cars.svg" alt="cars">
        </a>
        <a href="/cars">Cars</a>
    </div>
</div>
</div>
<div class="nav-white">
<div class="title-menu">
    <h1><%= title_nav_B %></h1>
</div>
<div class="list-menu">
    <h1><%= title_nav %></h1>
</div>
</div>
